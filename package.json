{
  "name": "base-dev-env",
  "version": "0.1.0",
  "description": "Base ES6, Express, Node development environment.",
  "scripts": {
    "clean:dist": "rimraf ./dist && mkdir dist",
    "build:dev:server": "babel src/server/devServer.js --out-file dist/server.js",
    "build:prod:server": "babel src/server/prodServer.js --out-file dist/server.js",
    "build:dev:web": "webpack --config webpack.config.dev.babel.js",
    "build:prod:web": "webpack --config webpack.config.prod.babel.js",
    "prestart:dev": "npm-run-all clean:dist build:dev:server build:dev:web",
    "server": "node dist/server.js",
    "watch": "npm run build:dev:web -- --watch",

    "start:dev": "npm-run-all --parallel server watch",
    "start": "npm-run-all clean:dist build:prod:server build:prod:web server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "js"
  ],
  "author": "Ray Vernagus",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.6.2",
    "ejs": "^2.5.6",
    "express": "^4.15.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-latest": "^6.24.1",
    "html-webpack-plugin": "^2.28.0",
    "npm-run-all": "^4.0.2",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "uglify-js": "^2.8.22",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "webpack": "^2.4.1"
  }
}
